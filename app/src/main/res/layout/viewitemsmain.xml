<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:elevation="90dp"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#03F4F3F3"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageitem"
            android:layout_width="120dp"
            android:layout_height="121dp"
            android:layout_gravity="right"
            android:scaleType="fitStart"></ImageView>

        <LinearLayout
            android:id="@+id/info_item"
            android:layout_width="246dp"
            android:layout_height="110dp"
            android:background="#14121111"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="أسم العنصر"
                android:textAlignment="center"
                android:textColor="#121111">

            </TextView>

            <TextView
                android:id="@+id/Item_RemainingDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="الأيام المتبقية"
                android:textAlignment="center"
                android:textColor="#121111">

            </TextView>

            <TextView
                android:id="@+id/Item_currentweight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="الوزن الحالي"
                android:textAlignment="center"
                android:textColor="#121111">

            </TextView>

            <TextView
                android:id="@+id/quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="الكمية المتبقية"
                android:textAlignment="center"
                android:textColor="#121111">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginRight="150dp"
                android:background="#03F4F3F3"
                android:orientation="horizontal"
                android:textAlignment="center"
                android:textDirection="firstStrongRtl">

                <ImageButton
                    android:id="@+id/Buttons_DeleteItem"
                    style="@android:style/Widget.ImageButton"
                    android:layout_width="37dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:scaleType="fitStart"
                    android:textAlignment="textEnd"
                    app:srcCompat="@drawable/ic_baseline_delete_24"
                    tools:ignore="RtlCompat,VectorDrawableCompat"></ImageButton>

                <ImageButton
                    android:id="@+id/Buttons_Update"
                    style="@android:style/Widget.ImageButton"
                    android:layout_width="38dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/ic_baseline_autorenew_24"
                    tools:ignore="VectorDrawableCompat"></ImageButton>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>